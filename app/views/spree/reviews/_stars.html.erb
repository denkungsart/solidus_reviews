<%
  if defined?(edit_enabled)
    state = false
    selected = 0
  else
    state = true
    selected = stars if !defined?(stars).nil?
  end
%>
<%=
  select_tag "review[rating]",
  options_for_select((1..NB_STARS).to_a,
  selected: selected),
  data: { "barrating-options": { readonly: state, theme: THEME } },
  class: "review-stars"
%>
